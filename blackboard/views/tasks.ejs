<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>BlackBoard</title>

    <!-- Bootstrap core CSS-->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin.css" rel="stylesheet">

  </head>

  <body id="page-top">

    <%- include('header'); %>

    <%- include('sidebar'); %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <div class="list-group">
            <%for(var i=0; i<tasks.length; i++){ %>
              <%var date = new Date();
              if(tasks[i].dateCloture==null && tasks[i].dateDue < date){
                var list = "list-group-item list-group-item-danger";
                var info = " Échéance dépassée: "+dateFormat(tasks[i].dateDue);
                var icon = "fas fa-exclamation-circle"
              }else if(tasks[i].dateCloture==null){
                var list = "list-group-item list-group-item-action";
                var info = " Echéance: "+dateFormat(tasks[i].dateDue);
                var icon = ""
              }else{
                var list = "list-group-item list-group-item-success";
                var info = " Clôturé le: "+ dateFormat(tasks[i].dateCloture);
                var icon = "fas fa-check-square";
              }%>
            <a href="#" class="<%=list%>">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%=tasks[i].category%></h5>
                  <small>Date de la demande: <%=dateFormat(tasks[i].dateInsert)%></small>
                </div>
                <p class="mb-1"><%=tasks[i].name%></p>
                <small class="<%=icon%>"><%=info%></small>
            </a>
            <%}%>
          </div>


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->



    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

  </body>

</html>
